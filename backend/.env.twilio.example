# ====================================
# Ejemplo de Configuración con Twilio
# ====================================

# Base de datos (mantén tu configuración actual)
DB_HOST=mysql
DB_PORT=3306
DB_USERNAME=techno_user
DB_PASSWORD=techno_password
DB_DATABASE=techno_hogar

# Puerto del servidor
PORT=3000

# ====================================
# WhatsApp con Twilio (Recomendado)
# ====================================

# Habilitar notificaciones de WhatsApp
WHATSAPP_NOTIFICATIONS_ENABLED=true

# Tu número de WhatsApp (debe estar registrado en Twilio Sandbox)
# Formato: whatsapp:+[código país][número]
WHATSAPP_ADMIN_PHONE=whatsapp:+521xxxxxxxxxx

# Credenciales de Twilio (obtén en https://console.twilio.com)
TWILIO_ACCOUNT_SID=ACxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_AUTH_TOKEN=tu_auth_token_aqui

# Número de WhatsApp de Twilio (lo obtienes en el Sandbox)
# Formato: whatsapp:+14155238886
TWILIO_WHATSAPP_NUMBER=whatsapp:+14155238886

# ====================================
# CallMeBot (Alternativa - menos confiable)
# ====================================
# Si prefieres usar CallMeBot en lugar de Twilio:
# WHATSAPP_ADMIN_PHONE=+521xxxxxxxxxx
# CALLMEBOT_API_KEY=tu_api_key

# ====================================
# Google Sheets (Opcional)
# ====================================
GOOGLE_SHEETS_ENABLED=false
# GOOGLE_SHEETS_ID=tu_spreadsheet_id
# GOOGLE_SERVICE_ACCOUNT_EMAIL=tu-service-account@project.iam.gserviceaccount.com
# GOOGLE_PRIVATE_KEY=-----BEGIN PRIVATE KEY-----\ntu_private_key\n-----END PRIVATE KEY-----

# ====================================
# Notas Importantes
# ====================================
# 1. Para Twilio, el formato del número debe incluir "whatsapp:" al inicio
# 2. Para CallMeBot, el formato es solo "+521xxxxxxxxxx" sin "whatsapp:"
# 3. Twilio es mucho más confiable que CallMeBot
# 4. El trial de Twilio incluye $15 USD de crédito gratis
